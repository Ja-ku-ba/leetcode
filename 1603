class ParkingSystem:
    def __init__(self, big, medium, small):
        self.big = big
        self.medium = medium
        self.small = small  
    def addCar(self, carType):
        if carType == 1:
            if self.big >= 1:
                self.big -= 1
                return(True)
            else:
                return(False)
        elif carType == 2:
            if self.medium >= 1:
                self.medium -= 1
                return(True)
            else:
                return(False)
        elif carType == 3:
            if self.small >= 1:
                self.small -= 1
                return(True)
            else:
                 return(False)
